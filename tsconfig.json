{
  "extends": "./paths.json",
  "compilerOptions": {
    "outDir": "./",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    // "jsx": "vue",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "release",
    "scripts",
    "src/renderer/src/icons"
  ]
}